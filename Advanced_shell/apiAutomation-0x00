#!/usr/bin/env bash

set -e  # exit on error in pipeline

POKEMON="pikachu"
API_URL="https://pokeapi.co/api/v2/pokemon/${POKEMON}"

OUTPUT_FILE="data.json"
ERROR_FILE="errors.txt"

# Remove old files if exist
rm -f "$OUTPUT_FILE" "$ERROR_FILE"

echo "Fetching data for '$POKEMON' from $API_URL â€¦"

# Use curl to fetch
HTTP_STATUS=$(curl -s -w "%{http_code}" "$API_URL" -o "$OUTPUT_FILE") || CURL_EXIT=$?

if [[ -n "${CURL_EXIT:-}" ]]; then
  echo "Curl failed with exit code $CURL_EXIT" > "$ERROR_FILE"
  exit 1
fi

if [[ "$HTTP_STATUS" -ne 200 ]]; then
  echo "HTTP error: status $HTTP_STATUS" > "$ERROR_FILE"
  # also include response body if any
  cat "$OUTPUT_FILE" >> "$ERROR_FILE"
  rm -f "$OUTPUT_FILE"
  exit 1
fi

echo "Successfully saved JSON to $OUTPUT_FILE"